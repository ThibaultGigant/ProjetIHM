<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".PlanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">

             <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plan_restaurant" />


            <Button
                android:id="@+id/ButtonTableOne"
                android:layout_width="147dp"
                android:layout_height="71dp"
                android:onClick="viewTable1"
                android:background="@null"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="50dp" />

            <Button
                android:id="@+id/ButtonTableTwo"
                android:layout_width="68dp"
                android:layout_height="58dp"
                android:onClick="viewTable2"
                android:background="@null"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="135dp" />

            <Button
                android:id="@+id/ButtonTableThree"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:onClick="viewTable3"
                android:background="@null"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="210dp" />

            <Button
                android:id="@+id/ButtonTableFour"
                android:layout_width="68dp"
                android:layout_height="62dp"
                android:onClick="viewTable4"
                android:background="@null"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="135dp" />

            <Button
                android:id="@+id/ButtonTableFive"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:onClick="viewTable5"
                android:background="@null"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="210dp" />

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView4"
            android:background="#ed5e5e5e" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp">

                <TextView
                    android:id="@+id/Alarme1"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Table 3 : Servir le plat"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView5"
                    android:background="#ed5e5e5e" />

                <TextView
                    android:id="@+id/Alarme2"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Table 8 : Amener de l'eau"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView6"
                    android:background="#ed5e5e5e" />

                <TextView
                    android:id="@+id/Alarme3"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Table p : Appel du serveur"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView7"
                    android:background="#ed5e5e5e" />

                <TextView
                    android:id="@+id/Alarme4"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Table 6 : Amener du pain"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView8"
                    android:background="#ed5e5e5e" />

                <TextView
                    android:id="@+id/Alarme5"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Table 6 : Amener du pain"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView9"
                    android:background="#ed5e5e5e" />

                <TextView
                    android:id="@+id/Alarme6"
                    android:layout_width="125dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Table 6 : Amener du pain"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</FrameLayout>