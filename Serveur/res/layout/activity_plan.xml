<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".PlanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">

             <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plan_restaurant" />


            <Button
                android:id="@+id/ButtonTableOne"
                android:layout_width="147dp"
                android:layout_height="71dp"
                android:onClick="viewTable1"
                android:background="@null"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="50dp" />

            <Button
                android:id="@+id/ButtonTableTwo"
                android:layout_width="68dp"
                android:layout_height="58dp"
                android:onClick="viewTable2"
                android:background="@null"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="135dp" />

            <Button
                android:id="@+id/ButtonTableThree"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:onClick="viewTable3"
                android:background="@null"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="210dp" />

            <Button
                android:id="@+id/ButtonTableFour"
                android:layout_width="68dp"
                android:layout_height="62dp"
                android:onClick="viewTable4"
                android:background="@null"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="135dp" />

            <Button
                android:id="@+id/ButtonTableFive"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:onClick="viewTable5"
                android:background="@null"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="210dp" />

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView4"
            android:background="#ed5e5e5e" />

        <include layout="@layout/alertes" />

    </LinearLayout>

</FrameLayout>