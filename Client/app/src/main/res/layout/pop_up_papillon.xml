<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popUpPap"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null"
    android:visibility="invisible">

    <ImageButton android:background="@null"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:onClick="unPopServeur"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_margin="30dp"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#ffffff">

            <LinearLayout
                android:focusable="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/layout_eau"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_eau" />

                    <Button
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Demander de l&apos;eau"
                        android:id="@+id/textView"
                        android:layout_gravity="center"
                        android:autoText="false"
                        android:textSize="17dp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/separator"
                    android:background="#490606"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_pain" />

                    <Button
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Demander du pain"
                        android:id="@+id/textView2"
                        android:layout_gravity="center"
                        android:textSize="17dp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/separator2"
                    android:background="#490606"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_appel_serveur" />

                    <Button
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Appeler le serveur"
                        android:id="@+id/textView3"
                        android:layout_gravity="center"
                        android:textSize="17dp" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>